<p id="notice"><%= notice %></p>

<% if @users %>
  <% @users.each do |user| %>
    <div class="user">
      <p><%= user.email %></p>
    
      <% if user.latitude and user.longitude %>
        <div class="latitude"><%= user.latitude %></div>
        <div class="longitude"><%= user.longitude %></div>
      <% end %>
    </div>
  <% end %>

  <br>
  <div id="centroid">
    <p>Magical Centroid</p>
    <div class="latitude"><%= @lat %></div>
    <div class="longitude"><%= @long %></div>
  </div>
<% end %>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>

<div id="map_canvas" style="width: 500px; height: 500px;"></div>
